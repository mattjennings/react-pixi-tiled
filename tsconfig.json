{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es5",
    "sourceMap": true,
    "jsx": "preserve",

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "typeRoots": ["@types", "node_modules/@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "static"]
}
